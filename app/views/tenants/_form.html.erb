<%= form_for(tenant, local: true, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if tenant.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only"><%= 'Close'.t %></span></button>
      <h4><%= 'Errors prohibited changes from being saved'.t %>.</h4>

      <ul>
      <% tenant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-offset-2 col-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :active %>
          <%= 'Active'.t %>
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: "col-2 control-label" %>
    <div class="col-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :slug, class: "col-2 control-label" %>
    <div class="col-4">
      <%= f.text_field :slug, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :domain, class: "col-2 control-label" %>
    <div class="col-10">
      <%= f.text_field :domain, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-2 control-label" %>
    <div class="col-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-offset-2 col-10"> <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to('Back'.t, :back, class: 'btn btn-light' ) %>
    </div>
  </div>
<% end %>

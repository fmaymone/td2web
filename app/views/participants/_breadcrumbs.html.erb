<nav aria-label="breadcrumb">
  <ol class="breadcrumb bg-light shadow-sm rounded-3">
    <li class="breadcrumb-item"><%= link_to('Dashboard'.t, root_path) %></li>
    <% if @team_diagnostic %>
      <% if @team_diagnostic.setup? %>
        <li class="breadcrumb-item"><%= link_to( @team_diagnostic.name, wizard_team_diagnostic_path(id: @team_diagnostic.id, step: TeamDiagnostics::Wizard::PARTICIPANTS_STEP )) %></li>
      <% else %>
        <li class="breadcrumb-item"><%= link_to( @team_diagnostic.name, team_diagnostic_path(@team_diagnostic )) %></li>
      <% end %>
      <li class="breadcrumb-item"><%= link_to('Participants'.t, team_diagnostic_participants_path(team_diagnostic_id: @team_diagnostic.id )) %></li>
    <% end %>
    <li class="breadcrumb-item active" aria-current="page"><%= ( @current_page || params[:action].humanize.t )%> </li>
  </ol>
</nav>

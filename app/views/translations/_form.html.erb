<%= form_for(translation, local: true, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if translation.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only"><%= 'Close'.t %></span></button>
      <h4><%= 'Errors prohibited this translation from being saved'.t %>.</h4>

      <ul>
      <% translation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row form-group">
    <%= f.label :locale, class: 'col-2 control-label' %>
    <div class="col-10">
      <%= f.select :locale, grouped_options_for_select(@service.locale_grouped_options, translation.locale), class: 'form-control' %>
    </div>
  </div>

  <div class="row form-group">
    <%= f.label :key, 'Key'.t, class: 'col-2 control-label' %>
    <div class="col-12">
      <%= f.text_area :key, class: 'form-control' %>
    </div>
  </div>

  <div class="row form-group">
    <%= f.label :value, 'Value'.t, class: 'col-2 control-label' %>
    <div class="col-12">
      <%= f.text_area :value, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-offset-2 col-10">
      <%= f.submit 'Save'.t, class: 'btn btn-primary' %>
      <%= link_to('Cancel'.t, :back, class: 'translation--form--cancel-button') %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-8">
    <p id="notice"><%= notice %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h1><%= 'Organizations'.t %></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Slug</th>
          <th>Locale</th>
          <th>Domain</th>
          <th>Description</th>
          <th>Active</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @organizations.each do |organization| %>
          <tr>
            <td><%= organization.name %></td>
            <td><%= organization.locale %></td>
            <td><%= organization.slug %></td>
            <td><%= organization.domain %></td>
            <td><%= organization.description %></td>
            <td><%= organization.active %></td>
            <td>
              <%= link_to 'Show'.t, organization, class: 'btn btn-sm btn-primary'%>
              <%= link_to 'Edit'.t, edit_organization_path(organization), class: 'btn btn-sm btn-primary' %>
              <%= link_to 'Destroy'.t, organization, { method: :delete, data: { confirm: 'Are you sure?'.t } } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <%= link_to 'Add Organization'.t, new_organization_path, class: 'btn btn-primary' %>
  </div>
</div>

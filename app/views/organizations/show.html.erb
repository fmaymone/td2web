<div class="row">
  <div class="col-12">
    <p id="notice"><%= notice %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <h1>
      <%= @organization.name %>
    </h1>

    <p>
      <strong>Slug:</strong>
      <%= @organization.slug %>
    </p>

    <p>
      <strong>Domain:</strong>
      <%= @organization.domain %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @organization.description %>
    </p>

    <p>
      <strong>Active:</strong>
      <%= @organization.active %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-4">
    <%= link_to 'Edit', edit_organization_path(@organization), class: 'btn btn-primary' %>
    <%= link_to 'Back', organizations_path, class: 'btn btn-light' %>
  </div>
</div>



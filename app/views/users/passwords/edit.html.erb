<div class="row">
  <div class="col">
    <h2><%= 'Change your password'.t %></h2>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>
  <%= f.hidden_field :reset_password_token %>
      <div class="form-group col-sm-6">
        <%= f.label :password, 'Password'.t %>
        <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'form-control', aria: { required: true } %>
      </div>
      <div class="form-group col-sm-6">
        <%= f.label :password_confirmation, 'Password Confirmation'.t %>
        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: 'new-password', class: 'form-control', aria: { required: true } %>
      </div>
      <div class="row">
        <div class="col-sm-3">
          <%= f.submit 'Change my password'.t, class: 'btn btn-primary' %>
        </div>
        <div class="col-sm-3">
          <%= link_to 'Back'.t, :back, class: "btn btn-light" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col">
    <h2><%= 'Log in to Team Diagnostic'.t %></h2>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group col-sm-6 col-md-6">
        <%= f.label :login, 'Login'.t %>
        <%= f.text_field :login, autofocus: true, autocomplete: "login", class: "form-control", aria: { required: true } %>
      </div>
      <div class="form-group col-sm-6 col-md-6">
        <%= f.label :password, 'Password'.t %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", aria: { required: true } %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field col-sm-6 col-md-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="row">
        <div class="col-sm-1">
          <%= f.submit 'Log in'.t, class: 'btn btn-primary' %>
        </div>
        <div class="col-sm-6">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>


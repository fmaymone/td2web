source 'https://rubygems.org'
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

ruby '2.7.0'

gem 'rails', '~> 6.0'
gem 'pg', '~> 1.2'
gem 'puma', '~> 4.3'
gem 'sass-rails', '~> 6.0'
gem 'webpacker', '~> 4.2'

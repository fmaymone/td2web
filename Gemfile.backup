  gem 'rspec-rails', '~> 4.0'
  gem 'simplecov', '~> 0.18'
  gem 'rspec_junit_formatter', '~> 0.4'
  gem 'action-cable-testing', '~> 0.6'
  gem 'annotate', '~> 3.1'
  gem 'pessimize', '~> 0.4'
